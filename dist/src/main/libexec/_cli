# resolve links - $0 may be a softlink
PRG="${0}"

while [ -h "${PRG}" ]; do
ls=`ls -ld "${PRG}"`
link=`expr "$ls" : '.*-> \(.*\)$'`
if expr "$link" : '/.*' > /dev/null; then
PRG="$link"
else
PRG=`dirname "${PRG}"`/"$link"
fi
done

BASEDIR=`dirname ${PRG}`
BASEDIR=`cd ${BASEDIR}/..;pwd`
SDC_DIST=${BASEDIR}
CLI_JAR="${SDC_DIST}/cli-lib/streamsets-datacollector-cli-${project.version}.jar"

if [ -z "$JAVA_HOME" ]
then
  JAVA=`which java`
else
  JAVA="$JAVA_HOME/bin/java"
fi

exec ${JAVA} ${SDC_CLI_JAVA_OPTS} -jar ${CLI_JAR} "$@"

status=$?
echo "Exit: $status"
exit $status

      <outputDirectory>/</outputDirectory>
    </fileSet>

    <!-- CDH5 Kafka libs -->
    <fileSet>
      <directory>${basedir}/../${cdh_kafka_1_2-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>

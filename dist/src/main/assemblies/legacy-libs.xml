<!--
     Last cut off for "legacy" stage libraries was October 2015. Exception to this
     is Kudu that we cut on 1.3 as that is the first release with security support
     (Keberos, SSL, ...).
-->
<assembly>
  <id>legacy-libs</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <!-- This is a bit of a hack - assembly will fail if files is empty -->
  <files>
    <file>
      <source>${basedir}/../LICENSE.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
  </files>

  <fileSets>
    <!-- CDH libs -->
    <fileSet>
      <directory>${basedir}/../${cdh_5_2-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../${cdh_5_3-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../${cdh_5_4-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../${cdh_5_5-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../${cdh_5_7-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>

    <!-- CDH Spark Kafka lib -->
    <fileSet>
      <directory>${basedir}/../${cdh_5_4-cluster-cdh_kafka_1_2-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../${cdh_5_4-cluster-cdh_kafka_1_3-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../${cdh_5_5-cluster-cdh_kafka_1_2-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../${cdh_5_5-cluster-cdh_kafka_1_3-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../${cdh_5_7-cluster-cdh_kafka_2_0-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>

    <!-- HDP Libs -->
    <fileSet>
      <directory>${basedir}/../${hdp_2_2-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../${hdp_2_3-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../${hdp_2_3-hive1-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>

    <!-- MapR Libs -->
    <fileSet>
      <directory>${basedir}/../${mapr_5_0-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>

    <!-- Apache Kudu libs -->
    <fileSet>
      <directory>${basedir}/../${apache-kudu_1_0-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../${apache-kudu_1_1-lib}/target/streamsets-libs/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../${apache-kudu_1_2-lib}/target/streamsets-libs/</directory>

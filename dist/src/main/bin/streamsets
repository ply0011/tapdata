# resolve links - $0 may be a softlink
PRG="${0}"

while [ -h "${PRG}" ]; do
  ls=`ls -ld "${PRG}"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "${PRG}"`/"$link"
  fi
done

BASEDIR=`dirname ${PRG}`
BASEDIR=`cd ${BASEDIR}/..;pwd`

while test $# -gt 0; do
  case "$1" in
    dc)
      shift
      exec ${BASEDIR}/libexec/_sdc "$@"
      ;;
    create-dc)
      shift
      exec ${BASEDIR}/libexec/_create-sdc "$@"
      ;;
    cli)
      shift
      exec ${BASEDIR}/libexec/_cli "$@"
      ;;
    jks-cs)
      shift
      exec ${BASEDIR}/libexec/_jks_cs "$@"
      ;;
    stagelibs)
      shift
      exec ${BASEDIR}/libexec/_stagelibs "$@"
      ;;
    show-vault-id)
      shift
      exec ${BASEDIR}/libexec/_show_vault_id
      ;;
    setup-mapr)
      shift
      exec ${BASEDIR}/libexec/_mapr_setup
      ;;
    help)
      ${PRG} --help
      exit 0
      ;;
    -help)
      ${PRG} --help
      exit 0
      ;;
    --help)
      echo ""
      echo "streamsets <SUB_COMMAND> [<SUB_COMMAND_ARGUMENTS>]"
      echo ""
      echo "  Sub-commands:"
      echo ""
      echo "    dc: Starts the Data Collector"
      echo ""
      echo "    create-dc: Creates new instance of Data Collector"
      echo ""
      echo "    cli: Data Collector CLI"
      echo ""
      echo "    jks-cs: Java Keystore Credential Store"
      echo ""
      echo "    stagelibs: Data Collector Stage library installer"
      echo ""
      echo "    show-vault-id: Shows the user-id to authorize in Vault"
      echo ""
      echo "    setup-mapr: Enables the MapR stage library for the detected"
      echo "                MapR installation."
      echo ""
      exit 0
      ;;
    *)
      echo ""
      echo "Invalid sub-command"
      ${PRG} -help
      exit 1
      ;;
  esac
done

echo ""
echo "Missing sub-command"
${PRG} -help
exit 1
